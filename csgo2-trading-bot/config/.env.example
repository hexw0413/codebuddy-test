# 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_NAME=csgo2_trading
DB_USER=postgres
DB_PASSWORD=your_password

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Steam配置
STEAM_API_KEY=your_steam_api_key
STEAM_LOGIN_URL=https://steamcommunity.com/openid/login
STEAM_CALLBACK_URL=http://localhost:8080/api/v1/auth/steam/callback
STEAM_SHARED_SECRET=your_shared_secret
STEAM_IDENTITY_SECRET=your_identity_secret

# BUFF配置
BUFF_ENABLED=true
BUFF_BASE_URL=https://buff.163.com
BUFF_APP_ID=your_buff_app_id
BUFF_APP_SECRET=your_buff_app_secret
BUFF_COOKIE=your_buff_cookie

# 悠悠有品配置
YOUPIN_ENABLED=true
YOUPIN_BASE_URL=https://www.youpin898.com
YOUPIN_API_KEY=your_youpin_api_key
YOUPIN_API_SECRET=your_youpin_api_secret

# 交易配置
AUTO_TRADE_ENABLED=false
MAX_ORDERS_PER_DAY=100
MIN_PROFIT_PERCENT=5.0
MAX_INVESTMENT=10000.0

# 服务器配置
SERVER_PORT=8080
SERVER_MODE=production

# JWT配置
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRE_HOURS=24

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=app.log

# 通知配置
ENABLE_NOTIFICATIONS=true
WEBHOOK_URL=your_webhook_url